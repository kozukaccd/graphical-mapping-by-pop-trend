{
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.+(ts|tsx|js)", "**/?(*.)+(spec|test).+(ts|tsx|js)"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "testEnvironment": "jest-environment-jsdom",
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "moduleNameMapper": {
    "d3(-.*)": "<rootDir>/node_modules/d3$1/dist/d3$1.min.js",
    "^~/(.+)": "<rootDir>/src/$1"
  }
}
